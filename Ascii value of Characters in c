#include <stdio.h>
int main() {  
    char c;
    printf("Enter a character: ");
    scanf("%c", &c);  
    
    // %d displays the integer value of a character
    // %c displays the actual character
    printf("ASCII value of %c = %d\n", c, c);
    printf("ASCII value of %c = %d", 86, 86);
    
    //you can reverse %c and %d so you can take an integer value as an input and print the character value according to asci
    return 0;
}
